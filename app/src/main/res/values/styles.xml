<resources>

    <!-- Base application theme. -->
    <style name="light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:background">@color/light_read_color</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <style name="night" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/night_text_color</item>
        <item name="android:background">@color/night_black_color</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
