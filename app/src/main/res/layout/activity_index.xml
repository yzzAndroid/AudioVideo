<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.IndexActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/music_drawable" />

        <CheckBox

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/video_drawable" />
    </LinearLayout>


     <RelativeLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/index_music_icon_img"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon_music"
            />
         <RelativeLayout
             android:padding="12dp"
             android:layout_toRightOf="@+id/index_music_icon_img"
             android:layout_toLeftOf="@+id/index_music_play_cb"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView
                 android:layout_alignParentTop="true"
                 android:textSize="15sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="歌曲的名称"
                 />
             <TextView
                 android:layout_alignParentBottom="true"
                 android:textSize="13sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="歌曲的名称"
                 />
         </RelativeLayout>

        <CheckBox
            android:button="@null"
            android:layout_marginRight="24dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/index_music_list_img"
            android:id="@+id/index_music_play_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/play_drawable"
            android:checked="false" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/index_music_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_list_song"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</RelativeLayout>
